<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MVVM.ViewModels;assembly=MVVM"
             x:Class="MVVM.Views.MovieIconView"
             x:DataType="viewModels:MovieTileViewModel">
    <ContentView.Content>
        <Frame
            CornerRadius="10"
            HasShadow="False">
            <StackLayout
                Padding="12, 0">
                <Label
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    FontSize="18" />
                <Label
                    Text="{Binding SubText}"
                    FontSize="14"/>
                <Label
                    Text="{Binding Description}"
                    FontSize="14" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>